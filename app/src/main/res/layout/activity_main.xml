<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_pager"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="45dp"
        >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_above="@+id/main_indicator"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:id="@+id/main_bottom_menu_tab"
        android:background="#ffffff"
        >
        <Button
            android:background="@drawable/home"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/btn_main1view"
            />
        <Button
            android:background="@drawable/cart"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/btn_main2view"
            />
        <Button
            android:background="@drawable/person"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/btn_main3view"
            />
        <Button
            android:background="@drawable/setting_icon"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/btn_main4view"
            />

    </LinearLayout>

    <com.adlots.adlots.helper.UnderlinePageIndicator
        android:id="@+id/main_indicator"
        android:layout_height="5dp"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        />

</RelativeLayout>