<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_pager"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="45dp"
        >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_above="@+id/main_indicator"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/main_bottom_menu_tab"
        android:background="#ffffff"
        android:gravity="bottom"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            >
            <Button
                android:background="@drawable/home"
                android:layout_width= "36dp"
                android:layout_height="36dp"
                android:id="@+id/btn_mainpage1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            >
            <Button
                android:background="@drawable/cart_gray"
                android:layout_width= "36dp"
                android:layout_height="36dp"
                android:id="@+id/btn_mainpage2"
                />
         </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            >
            <Button
                android:background="@drawable/person_gray"
                android:layout_width= "36dp"
                android:layout_height="36dp"
                android:id="@+id/btn_mainpage3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            >
            <Button
                android:background="@drawable/setting4"
                android:layout_width= "36dp"
                android:layout_height="36dp"
                android:id="@+id/btn_mainpage4"
                />
        </LinearLayout>

    </LinearLayout>

    <com.adlots.adlots.helper.UnderlinePageIndicator
        android:id="@+id/main_indicator"
        android:layout_height="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        />

</RelativeLayout>