<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:id="@+id/main_third_iteminfo_popup" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#2b2b2b"
            android:text="보유하신 랏츠"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/main3_popup_mypoint"
            android:singleLine="true"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textColor="#666666"
            android:textSize="12dp"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#2b2b2b"
            android:text="응모한 사람 수"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true" />


        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/main3_popup_lotspeople"
            android:singleLine="true"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textColor="#666666"
            android:textSize="12dp"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#fc6e51"
            android:text="현재 남은 랏츠"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true" />


        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/main3_popup_remainpoint"
            android:singleLine="true"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textColor="#fc6e51"
            android:textSize="12dp"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            />

    </RelativeLayout>

</LinearLayout>