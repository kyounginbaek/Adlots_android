<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    /*상품 진열*/
    /*첫번쨰 상품*/
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:background="#ffffff"
        >
        첫번째 상품 그림
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/main2_layoutnull1"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/main2_imagelink"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="D-day : "
                    android:textSize="10dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:id="@+id/main2_endtime"
                    android:text="5"
                    android:textSize="10dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:orientation="vertical"
                android:layout_gravity="bottom|right"
                android:background="@drawable/glass"
                />

        </FrameLayout>

        상품 설명
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:id="@+id/main2_layoutnull2"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main2_category"
                    android:text="피규어"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main2_brand"
                    android:text="원피스"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main2_itemname"
                android:paddingLeft="6dp"
                android:text="조로 피규어"
                android:textSize="14dp"
                android:textColor="#2d2d2d"
                />

            응모자수 : (n)명
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="bottom"
                android:id="@+id/main2_layoutnull3"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="응모자 수"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/main2_lotspeople"
                    android:text="n"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 명"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    />
            </LinearLayout>
            현재랏츠 : 00랏츠
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                android:id="@+id/main2_layoutnull4"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/main2_nowpoint"
                    android:text="n"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    />
            </LinearLayout>
            목표 랏츠 : 00랏츠
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                android:id="@+id/main2_layoutnull5"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마감 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/main2_endpoint"
                    android:text="n"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>
        </LinearLayout>
        응모/바로구매
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/main2_layoutnull6"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/main2_textbtn_lots"
                android:text="응모 하기"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="#16a0e8"
                />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/main2_textbtn_purchase"
                android:text="바로 구입"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="#fc6e51"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="9dp"
        android:gravity="center_horizontal"
        android:background="#f7f7f7"
        />

</LinearLayout>