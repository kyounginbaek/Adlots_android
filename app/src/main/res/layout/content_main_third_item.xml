<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    /*상품 진열*/
    /*첫번쨰 상품*/
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:background="#ffffff"
        >
        첫번째 상품 그림
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/main3_layoutnull1">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/main3_imagelink"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="bottom"
                android:id="@+id/main3_layoutnull7"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="D-day : "
                    android:textSize="10dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:id="@+id/main3_endtime"
                    android:text="5"
                    android:textSize="10dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main3_type"
                android:layout_gravity="bottom"
                android:text="기프티콘"
                android:textSize="10dp"
                android:textColor="#6e6e6e"                />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:orientation="vertical"
                android:layout_gravity="bottom|right"
                android:background="@drawable/glass"
                />

        </FrameLayout>

        상품 설명
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingLeft="6dp"
                android:id="@+id/main3_layoutnull2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main3_category"
                    android:text="피규어"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main3_brand"
                    android:text="원피스"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main3_itemname"
                android:paddingLeft="6dp"
                android:text="조로 피규어"
                android:textSize="14dp"
                android:textColor="#2d2d2d"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="bottom"
                android:id="@+id/main3_layoutnull3"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 응모"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/main3_userlotspoint"
                    android:text="n"
                    android:textSize="12dp"
                    android:textColor="#fc6e51"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#fc6e51"
                    />
            </LinearLayout>

            응모/구입 날짜
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                android:id="@+id/main3_layoutnull4"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/main3_whentxt"
                    android:text="응모/구입 일시"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/main3_when"
                    android:text="n"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                android:id="@+id/main3_layoutnull5"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이템 정보 및 추가응모 >"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    android:id="@+id/main3_iteminfo"
                    />
            </LinearLayout>

        </LinearLayout>

        응모/바로구매
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/main3_layoutnull6"
            >
            <TextView
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:id="@+id/main3_status"
                android:text="진행중"
                android:textSize="12dp"
                android:textColor="#01a1ff"
                android:background="@drawable/win"                />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:id="@+id/main3_finish"
                android:text="2일 이내 지급 예정"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#2d2d2d"
                />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="9dp"
        android:gravity="center_horizontal"
        android:background="#f7f7f7"
        />

</LinearLayout>