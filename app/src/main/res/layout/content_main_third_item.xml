<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    /*상품 진열*/
    /*첫번쨰 상품*/
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:padding="3dp"
        android:background="#ffffff"
        >
        첫번째 상품 그림
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마감 날짜 : "
                    android:textSize="9dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6/28"
                    android:textSize="9dp"
                    android:textColor="#2d2d2d"
                    />
            </LinearLayout>

        </FrameLayout>


        상품 설명
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피규어"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원피스"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조로 피규어"
                android:textSize="12dp"
                android:textColor="#2d2d2d"
                />

            응모자수 : (n)명
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="응모자 수"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="n"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 명"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
            </LinearLayout>
            현재랏츠 : 00랏츠
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="n"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
            </LinearLayout>
            목표 랏츠 : 00랏츠
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목표 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="42000"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#2d2d2d"
                    />
            </LinearLayout>
            투자 랏츠
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="투자 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#e73236"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="200"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#e73236"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:textColor="#e73236"
                    />
            </LinearLayout>
        </LinearLayout>
        응모/바로구매
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="진행중"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="#1966cb"
                />
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="당첨 완료 or환불"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:background="#e73236"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>