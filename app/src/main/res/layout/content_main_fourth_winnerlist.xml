<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    /*상품 진열*/
    /*첫번쨰 상품*/
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:background="#ffffff"
        >
        첫번째 상품 그림
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/main4_layoutnull1"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/main4_imagelink"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="마감일 : "
                    android:textSize="10dp"
                    android:textColor="#6e6e6e"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:id="@+id/main4_whendone"
                    android:text="5"
                    android:textSize="10dp"
                    android:textColor="#6e6e6e"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main4_type"
                android:layout_gravity="bottom"
                android:text="기프티콘"
                android:textSize="10dp"
                android:textColor="#6e6e6e"
                />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:orientation="vertical"
                android:layout_gravity="bottom|right"
                android:background="@drawable/glass"
                />

        </FrameLayout>

        상품 설명
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:id="@+id/main4_layoutnull2"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main4_category"
                    android:text="피규어"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main4_brand"
                    android:text="원피스"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main4_itemname"
                android:paddingLeft="6dp"
                android:text="조로 피규어"
                android:textSize="15dp"
                android:textColor="#2d2d2d"
                />

            응모자수 : (n)명
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="bottom"
                android:id="@+id/main4_layoutnull3"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="응모자 수"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/main4_lotspeople"
                    android:text="n"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 명"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    />
            </LinearLayout>
            현재랏츠 : 00랏츠
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                android:id="@+id/main4_layoutnull4"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당첨 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/main4_userlotspoint"
                    android:text="n"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#fc6e51"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#fc6e51"
                    />
            </LinearLayout>
            목표 랏츠 : 00랏츠
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                android:id="@+id/main4_layoutnull5"
                android:paddingLeft="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마감 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/main4_endpoint"
                    android:text="n"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 랏츠"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:textColor="#6e6e6e"                    />
            </LinearLayout>
        </LinearLayout>
        응모/바로구매
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/main4_layoutnull6"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/main4_status"
                android:text="당첨"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="#01a1ff"
                android:background="@drawable/win"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당첨자"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="#2d2d2d"                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main4_nickname"
                    android:text="경인"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="#16a0e8"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="9dp"
        android:gravity="center_horizontal"
        android:background="#f7f7f7"
        />

</LinearLayout>