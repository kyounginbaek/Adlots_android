<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1966cb"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:layout_width="205dp"
            android:layout_height="219dp"
            android:src="@drawable/adlots_logo_white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height= "30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/edt_signin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:singleLine = "true"
            android:lines = "1"
            android:background="@drawable/register_email"
            android:textColor="#6e6e6e"
            android:hint="이메일(e-mail)"
            android:paddingStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height= "30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/edt_signin_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:singleLine = "true"
            android:lines = "1"
            android:inputType="textPassword"
            android:background="@drawable/register_email"
            android:textColor="#6e6e6e"
            android:hint="비밀번호(password)"
            android:paddingStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn_start"
            android:layout_width="260dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="로그인"
            android:background="#01a1ff"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/btn_goto_signup"
            android:layout_width="260dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:text="회원가입"
            android:background="#1966cb"
            android:textColor="#ffffff"
            />

    </LinearLayout>

</LinearLayout>