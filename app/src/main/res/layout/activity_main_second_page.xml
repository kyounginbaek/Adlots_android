<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    /*포인트 스토어*/
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="#01a1ff"
        >

        /* 스토어 , 그림 */
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Button
                android:layout_marginLeft="19dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cart2"
                />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="스토어"
                android:textSize="20dp"
                android:textColor="#ffffff"
                />
        </LinearLayout>

    </LinearLayout>


    /* 상품 아이콘 이미지들 */
    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/giftcon"
            >
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/gifticon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기프티콘"
                android:textSize="10dp"
                android:textColor="#2d2d2d"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/newdelivery"
            >
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/new_item2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신규 추첨"
                android:textSize="10dp"
                android:textColor="#2d2d2d"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/closedelivery"
            >
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/lottery"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임박 추첨"
                android:textSize="10dp"
                android:textColor="#2d2d2d"
                />
        </LinearLayout>

    </LinearLayout>

    /* 최신순 */
    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="최신순"
            android:textSize="16dp"
            android:textColor="#2d2d2d"
            />
    </LinearLayout>

    /* 상품 전체 페이지 */
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:padding="10dp"
        android:orientation="vertical"
        >
        /*상품 가로(행) 레이아웃
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            /*상품1*/
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:background="#eeefff"
                >

            </LinearLayout>
            /*사이공간*/
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="fill_parent">
            </LinearLayout>
            /*상품2*/
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:background="#eeefff"
                >

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            /*상품3*/
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:background="#eeefff"
                >

            </LinearLayout>
            /*사이공간*/
            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="fill_parent">
            </LinearLayout>
            /*상품4*/
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="200dp"
                android:background="#eeefff"
                >

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>