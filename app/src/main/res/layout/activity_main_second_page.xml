<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    /*포인트 스토어*/
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="146dp"
        android:background="#01a1ff"
        >
        /* 보유포인트*/
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_point"
                android:paddingTop="55dp"
                android:paddingLeft="25dp"
                android:textSize="13dp"
                android:textColor="#0d2436"
                android:id="@+id/main2_point"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cart3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="랏츠 스토어"
                android:textSize="24dp"
                android:textColor="#ffffff"
                />
        </LinearLayout>

    </LinearLayout>


    /* 상품 아이콘 이미지들 */
    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/giftcon"
            >
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/gifticon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기프티콘"
                android:textSize="10dp"
                android:textColor="#2d2d2d"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/newdelivery"
            >
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/new_item2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신규 추첨"
                android:textSize="10dp"
                android:textColor="#2d2d2d"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/closedelivery"
            >
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/lottery"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임박 추첨"
                android:textSize="10dp"
                android:textColor="#2d2d2d"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>