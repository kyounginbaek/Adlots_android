<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    /*개인페이지*/
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="146dp"
        android:background="#01a1ff"
        android:gravity="center_vertical"
        >
        /* 보유포인트*/
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle"
                android:text="보유 포인트
                            300 랏츠"
                android:textColor="#0d2436"
                />
        </LinearLayout>
        /* 닉네임~로그아웃 */
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            닉네임
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:text="(닉네임) 님"
                android:textSize="15dp"
                android:textColor="#f9fafc"
                />
            이메일
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:text="(이메일)@gamil.com"
                android:textSize="15dp"
                android:textColor="#f9fafc"
                />
            비밀번호 변경
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:text="비밀번호 변경"
                    android:textSize="15dp"
                    android:textColor="#f9fafc"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_back_pink"
                    />
            </LinearLayout>


            로그아웃
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:text="로그아웃"
                    android:textSize="15dp"
                    android:textColor="#f9fafc"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_back_pink"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    /*핸드폰*/
    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            >
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/telephone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/phone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="핸드폰"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:text="+8210253092"
                android:textSize="14dp"
                android:textColor="#6e6e6e"
                />
        </LinearLayout>
    </LinearLayout>

    /*이메일*/
    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/email"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/email">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="이메일(아이디)"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:text="ID@example. com"
                android:textSize="14dp"
                android:textColor="#6e6e6e"
                />
        </LinearLayout>
    </LinearLayout>

    /*보유포인트*/
    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/money"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/point">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="현재 적립금"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:text="125 points"
                android:textSize="14dp"
                android:textColor="#6e6e6e"
                />
        </LinearLayout>
    </LinearLayout>

    /*비밀번호 변경*/
    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/lock"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/userinfochange">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="개인정보 변경"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="67dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            >

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/lock"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:id="@+id/logout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="로그아웃"
                android:textSize="16dp"
                android:textColor="#2d2d2d"
                />

        </LinearLayout>
    </LinearLayout>

    /*아이콘들 */
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:src="@drawable/home"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            />
        <ImageView
            android:src="@drawable/cart"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            />
        <ImageView
            android:src="@drawable/person_blue"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            />
        <ImageView
            android:src="@drawable/setting_icon"
            android:layout_width= "40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>