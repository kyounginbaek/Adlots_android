<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >
    /* 설정*/
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#01a1ff"
        >
        <ImageView
            android:layout_marginLeft="19dp"
            android:src="@drawable/setting3"
            android:layout_gravity="center_vertical"
            android:layout_width= "36dp"
            android:layout_height="36dp"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="설정"
            android:textSize="20dp"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    /*    스크롤 페이지   */
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" >

        /*설정 박스 전체*/
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp"
            >

            /* 페이스북 페이지  */
            <LinearLayout
                android:background="#ffffff"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:id="@+id/main4_facebook"
                >
                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="페이스북 페이지"
                        android:layout_gravity="center_vertical"
                        android:textSize="14dp"
                        android:textColor="#2d2d2d"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="16dp"
                        android:text="&apos;좋아요&apos; 누르시고 당첨과 마감 상황을 알아보세요."
                        android:textSize="12dp"
                        android:textColor="#6e6e6e"
                        />
                </LinearLayout>

                /*화살표*/
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    >
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_back_pink"
                        android:onClick="editActions"
                        android:clickable="false"/>
                </LinearLayout>

            </LinearLayout>

            /* 바 */
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:gravity="center_horizontal"
                android:background="#dcdcdc" >
            </LinearLayout>

            /* 당첨자 목록보기 */
