                        android:textSize="12dp"
                        android:textColor="#6e6e6e"
                        />
                </LinearLayout>

                /*화살표*/
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
