<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adlots.adlots.activity.SignupActivity"
    android:background="@color/background"
    >

    <Button
        android:id="@+id/btn_signup_back"
        android:layout_width="59.6dp"
        android:layout_height="53.3dp"
        android:background="@drawable/icon_back"
        android:layout_gravity="start"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/sign_up"
        />

    <ScrollView
        android:layout_marginTop="120dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="이메일(아이디)"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />


                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_email"
                    android:singleLine="true"
                    android:layout_width="212dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:hint="비밀번호 분실시 메일을 보내기 위함"
                    android:textColor="#666666"
                    android:textSize="12dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="휴대폰번호"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_phone"
                    android:singleLine="true"
                    android:layout_width="212dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:clickable="false"
                    android:enabled="true"
                    android:focusable="false" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="비밀번호"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_password"
                    android:singleLine="true"
                    android:layout_width="212dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:inputType="textPassword"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:hint="최소 4자 이상" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="비밀번호 확인"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_passcheck"
                    android:singleLine="true"
                    android:layout_width="212dp"
                    android:layout_height="40dp"
                    android:hint="다시 한번 입력해주세요"
                    android:layout_gravity="right"
                    android:inputType="textPassword"
                    android:textColor="#666666"
                    android:textSize="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="닉네임"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_nickname"
                    android:singleLine="true"
                    android:layout_width="212dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:hint="앱 내에서 이름으로 사용됨"
                    android:inputType="textPassword"
                    android:textColor="#666666"
                    android:textSize="12dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup"
        android:text="가입하기"
        android:background="#16a0e8"
        android:textColor="#ffffff"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentStart="true" />

</RelativeLayout>