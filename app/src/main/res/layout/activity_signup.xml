<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="#01a1ff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="9"
            >
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="회원 가입"
                android:textSize="20dp"
                android:textColor="#ffffff"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center|left"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:orientation="vertical"
                android:background="@drawable/x"
                android:id="@+id/signup_btn_x"
                />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="이메일(아이디)"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />


                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_email"
                    android:singleLine="true"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:inputType="textEmailAddress"
                    android:hint="로그인과 비밀번호 분실시 사용됨"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:paddingStart="5dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="휴대폰번호"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:id="@+id/edt_signup_phone"
                    android:singleLine="true"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:clickable="false"
                    android:enabled="true"
                    android:focusable="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:paddingStart="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="비밀번호"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_password"
                    android:singleLine="true"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:inputType="textPassword"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:hint="영문과 숫자혼합 4~20자리"
                    android:paddingStart="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="비밀번호 확인"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_passcheck"
                    android:singleLine="true"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="다시 한번 입력해주세요"
                    android:layout_gravity="right"
                    android:inputType="textPassword"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:paddingStart="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#2b2b2b"
                    android:text="닉네임"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/edt_signup_nickname"
                    android:singleLine="true"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:hint="앱 내에서 사용됨 (2~10자리)"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    android:paddingStart="5dp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup"
        android:text="가입 후 바로 로그인"
        android:background="#01a1ff"
        android:textColor="#ffffff"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentStart="true" />

</RelativeLayout>